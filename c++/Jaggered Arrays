#include <iostream>
#include <vector>
using namespace std;

int main() {
    int row;
    cout << "Enter the number of subarrays: ";
    cin >> row;

    int* sizes = new int[row]; // Dynamic array for sizes
    int** arr = new int*[row];  // Pointer to array of pointers

    // Input sizes of each subarray
    for (int i = 0; i < row; i++) {
        cout << "Enter the size of subarray " << (i + 1) << ": ";
        cin >> sizes[i];
        arr[i] = new int[sizes[i]]; // Allocate memory for each subarray
    }

    // Input elements of each subarray
    for (int i = 0; i < row; i++) {
        cout << "Enter elements for subarray " << (i + 1) << ": ";
        for (int j = 0; j < sizes[i]; j++) {
            cin >> arr[i][j];
        }
    }

    // Output each subarray
    cout << "The subarrays are:" << endl;
    for (int i = 0; i < row; i++) {
        cout << "Subarray " << (i + 1) << ": ";
        for (int j = 0; j < sizes[i]; j++) {
            cout << arr[i][j] << " ";
        }
        cout << endl;
    }

    // Deallocate memory
    for (int i = 0; i < row; i++) {
        delete[] arr[i]; // Free each subarray
    }
    delete[] arr; // Free the array of pointers
    delete[] sizes; // Free the sizes array

    return 0;
}
