def reverse(s):
    # Using a loop to reverse the string
    reversed_str = ""
    for char in s:
        reversed_str = char + reversed_str
    return reversed_str

# Original string
s = "DeeptiGautam"

# Print original string
print("The original string is:", s)

# Print reversed string using the loop method
print("The reversed string after using loops is:", reverse(s))

# Alternative method: reversing using slicing
reversed_slicing = s[::-1]
print("The reversed string using slicing is:", reversed_slicing)
