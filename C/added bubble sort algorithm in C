#include <stdio.h>

void bubbleSort(int arr[], int n) {
    int temp;
    int swapped;
    
    for (int i = 0; i < n - 1; i++) {
        swapped = 0; // Flag to check if any swaps were made in this pass
        for (int j = 0; j < n - i - 1; j++) {
            if (arr[j] > arr[j + 1]) {
                // Swap arr[j] and arr[j + 1]
                temp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
                swapped = 1; // Set the flag to indicate a swap was made
            }
        }
        
        // If no two elements were swapped in this pass, the array is already sorted
        if (swapped == 0) {
            break;
        }
    }
}
//the particular lines are modified
int main() {
    int n;

    
    printf("Enter the number of elements: ");
    scanf("%d", &n);

    // Declare the array based on user input
    int arr[n];

    // Get array elements from user
    printf("Enter %d integers:\n", n);
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }
    
    // Print original array
    printf("Original array: \n");
    for (int i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    
    // Sort the array
    bubbleSort(arr, n);
    
    // Print sorted array
    printf("\nSorted array: \n");
    for (int i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    
    return 0;
}
